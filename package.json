{
  "name": "tantalus",
  "version": "1.0.0",
  "description": "Tantalus must 'speak' with MongoDB and export Developer query to JSON or CSV",
  "private": true,
  "engines": {
    "node": "^8.9.4"
  },
  "scripts": {
    "start": "node server/server.js",
    "debug": "chmod +x run-debug && ./run-debug",
    "test": "nyc mocha --recursive './{,!(node_modules)/**/}*.spec.js'",
    "dev": "nodemon server/server.js",
    "start:cluster": "sl-run server/server.js"
  },
  "nodemonConfig": {
    "env": {
      "NODE_HEAPDUMP_OPTIONS": "nosignal"
    }
  },
  "dependencies": {
    "appmetrics-dash": "^4.0.0",
    "appmetrics-prometheus": "^2.0.0",
    "appmetrics-zipkin": "^1.0.4",
    "aws-sdk": "^2.299.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "log4js": "^1.1.1",
    "mongoose": "^5.2.8",
    "multer": "^1.3.1",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "strong-supervisor": "^6.2.0",
    "tus-node-server": "^0.3.1",
    "tus-js-client": "1.5.1",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/mongodb": "^3.1.4",
    "@types/mongoose": "^5.2.5",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.7.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.0",
    "chakram": "^1.5.0",
    "chalk": "^1.1.3",
    "mocha": "^3.4.2",
    "nodemon": "^1.12.1",
    "nyc": "^10.3.2",
    "prompt-confirm": "^1.2.0",
    "request": "^2.82.0"
  }
}
